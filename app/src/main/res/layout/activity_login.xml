<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:background="@drawable/fondo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/LinearLayout_bienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/CompraRapidita"
                android:textSize="38sp"
                android:theme="@style/ColorFuenteEnFondoGris" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/logo2_compra_rapidita"
            android:importantForAccessibility="no" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/Publicidad3"
                android:textSize="20sp"
                android:theme="@style/ColorFuenteEnFondoGris" />

            <Button
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/button_inicioSesionGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_google"
                android:text="Iniciar sesion con Google"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout_usuarioNoRegistrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_centerInParent="true">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                app:lottie_fileName="animacion3.json"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_loop="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usuarioNoResgistrado"
                android:textSize="26sp"
                android:layout_gravity="center"
                android:theme="@style/ColorFuenteEnFondoGris" />


            <TextView
                android:id="@+id/textView_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:theme="@style/ColorFuenteEnFondoGris" />
            <TextView
                android:visibility="gone"
                android:id="@+id/textView_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:theme="@style/ColorFuenteEnFondoGris" />


            <Button
                android:id="@+id/button_RegistrarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                android:background="@drawable/bordes_boton"
                android:text="@string/registrarUsuario" />

            <Button
                android:id="@+id/button_cerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bordes_boton"
                android:text="@string/cambiarCuenta" />



        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
