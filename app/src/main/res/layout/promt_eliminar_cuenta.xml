<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:backgroundTint="@color/azul_trasparente"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        android:elevation="10dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ColorFuenteEnFondoGris"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Â¡Esta apunto de eliminar su cuenta de CATAPLUS!"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ColorFuenteEnFondoGris"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"
                android:text="Escriba ELIMINAR para eliminar su cuenta de forma permanente!"/>

            <EditText
                android:id="@+id/edittext_confirmacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="30sp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="ELIMINAR"
                android:textColor="@color/car_ui_ime_wide_screen_error_text_color"
                android:inputType="text" />

            <Button
                android:id="@+id/button_eliminarCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bordes_boton"
                android:text="Eliminar mi cuenta" />
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>